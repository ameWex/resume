<main>
    {{> shopheader}}

    <section class="row">
        {{#with formBlock}}
        <section class="col-8">
            <h1>{{header}}</h1>
            <div class="p-1">{{rating.title}} : {{rating.value}}</div>
            {{#with actionBlock}}
            <div class="nav nav-tabs nav-fill">
                {{#each tabs}}
                <a class="{{#if isActive}}active{{/if}} nav-item nav-link">{{this.text}}</a>
                {{/each}}
            </div>
            <hr class="my-4">
            {{#with report}}
            <div class="card">
                <div class="card-body">
                    <div>{{title}}</div>
                    {{#with button}}
                    <a class="mt-2 btn btn-secondary" href="{{link}}">{{text}}</a>
                    {{/with}}
                </div>
            </div>
            {{/with}}
            {{/with}}
            <hr class="my-4">
            {{#with feedbackBlock}}
            <h2>{{title}}</h2>
            <div class="row">
                <div class="col-12">
                    {{#each buttons}}
                    <a class="btn {{#if isWarning}}btn-warning{{/if}}{{#if isSuccess}}btn-success{{/if}}{{#if isDanger}}btn-danger{{/if}}"
                        href="{{link}}">{{text}}</a>
                    {{/each}}
                </div>
            </div>
            {{/with}}
            <hr class="my-4">
        </section>
        {{#with goodsInfo}}
        <section class="col-4">
            <div class="card">
                <div class="card-body">
                    <img src="{{photo}}" alt="photo">
                    <div>{{name}}</div>
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <h6>{{price}}</h6>
                    {{#if inMarket}}
                    <div class="mb-2">Є в наявності</div>
                    {{/if}}
                    {{#each buttons}}
                    <a class="mb-2 btn {{#if isPrimary}}btn-primary{{/if}}{{#if isSecondary}}btn-secondary{{/if}}"
                        href="{{link}}">{{text}}</a><br>
                    {{/each}}
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    {{#with seller}}
                    <div>{{title}}: <b>{{value}}</b></div>
                    {{/with}}
                </div>
            </div>
        </section>
        {{/with}}
        {{/with}}

        {{> reviewItem}}

        {{> shopaction}}
        {{> shopfooter}}
</main>