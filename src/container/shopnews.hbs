<main>
    {{> shopheader}}
    {{> breadcrumb}}
    <section class="row">
        {{#with newsData}}
        <div>
            <img class="card-header col-md-12" src="{{photo}}" alt="photo">
            {{#with head}}
            <h1 class="display-1 mt-4">{{heading}}</h1>
            <p>{{description}}</p>
            {{/with}}
            <hr>
            {{#each body}}
            <div>
                <div class="display-6">{{title}}</div>
                <p>{{text}}</p>
            </div>
            <hr>
            {{/each}}
        </div>
        {{/with}}
        {{#with newsOtherBlock}}
        <h3 class="text-center">{{title}}</h3>
        {{> shoppost}}
        {{/with}}
        <hr>
        {{> shopaction}}
        {{> shopfooter}}
    </section>
</main>