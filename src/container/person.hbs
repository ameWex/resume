{{#with person}}
{{> title data="Person" big=true}}
<section>
    <div>
        {{name}}
    </div>
    <br>
    <div>
        age: {{age}}
    </div>
    <br>
    <div>
        {{gender}}
    </div>
    <br>
    <div>
        {{#with address}}
        <address>
            <div>
                {{street}}
            </div>
            <div>
                {{city}}
            </div>
            <div>
                {{state}}
            </div>
            <div>
                {{zip}}
            </div>
            <div>
                {{country}}
            </div>
        </address>
        {{/with}}
    </div>
</section>
<hr>
{{#each education}}
<section>
    <div>
        <div>
            Degree:
            {{degree}}
        </div>
        <div>
            Major:
            {{major}}
        </div>
        <div>
            University:
            {{university}}
        </div>
        <div>
            Graduation Year:
            {{graduationYear}}
        </div>
    </div>
</section>
{{/each}}
<hr>
<section>
    <div>
        {{#each workExperience}}
        <div>
            {{company}}
        </div>
        <div>
            {{title}}
        </div>
        <div>
            Start date:
            {{startDate}}
        </div>
        <div>
            End date:
            {{endDate}}
        </div>
        <div>
            <ul>
                {{#each responsibilities}}
                <li>
                    <em>{{this}}</em>
                </li>
                {{/each}}
            </ul>
        </div>
        <div>
            {{year_founded}}
        </div>
        <div>
            {{industry}}
        </div>
        <br>
        <hr>
        <div>
            <strong>Employers:</strong>
            {{#each employees}}
            <section>
                <br><span>{{name}}</span><br>
                <span>{{position}}</span><br>
                <span>{{department}}</span>
            </section>
            <div>
                <strong>Projects:</strong>
                {{#each projects}}
                <ul>
                    <li>
                        <p>{{name}}</p>
                        <p>{{description}}</p>
                        <p>{{status}}</p>
                    </li>
                </ul>
                <br>
                <div>
                    {{#each teams}}
                    <ul>
                        <strong><br>{{team_name}}</strong>
                        <li>
                            {{#with team_leader}}
                            <p>{{name}}</p>
                            <p>{{title}}</p>
                            <p>{{email}}</p>
                            <p>{{skills}}</p>
                            {{/with}}
                        </li>
                        {{#each team_members}}
                        <ul>
                            <li>
                                <p>{{name}}</p>
                                <p>{{description}}</p>
                                {{#with technologies}}
                                <ul>
                                    <li>{{this}}</li>
                                </ul>
                                {{/with}}
                            </li>
                        </ul>
                        {{/each}}
                    </ul>
                </div>
                {{/each}}
            </div>
            {{/each}}
        </div>
        {{/each}}
    </div>
    {{/each}}
    </div>
</section>
{{/with}}