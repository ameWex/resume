<div>
    <h1>{{name}}</h1>
    <br>
    <h3>{{description}}</h3>
    <h3>{{price}}</h3>
    <h3>{{category}}</h3>
    <hr>
    <br>
    <h2>Features</h2>
    {{#with features}}
    <div>
        <br>
        <h3>Processor</h3>
        {{#with processor}}
        <div>
            <div>{{brand}}</div>
            <div>{{model}}</div>
            <div>{{speed}}</div>
            <div>{{cores}}</div>
            <div>{{cache}}</div>
        </div>
        {{/with}}
        <br>
        <h3>Memory</h3>
        {{#with memory}}
        <div>
            <div>{{type}}</div>
            <div>{{size}}</div>
            <div>{{speed}}</div>
        </div>
        {{/with}}
        <h3>Storage</h3>
        {{#with storage}}
        <div>
            <div>{{type}}</div>
            <div>{{size}}</div>
        </div>
        {{/with}}
        <br>
        <h3>Display</h3>
        {{#with display}}
        <div>
            <div>{{size}}</div>
            <div>{{resolution}}</div>
            <div>{{technology}}</div>
            <div>{{color_space}}</div>
            <div>{{brightness}}</div>
            <div>{{refresh_rate}}</div>
        </div>
        {{/with}}
        <br>
        <h3>Graphics</h3>
        {{#with memory}}
        <div>
            <div>{{brand}}</div>
            <div>{{model}}</div>
            <div>{{memory}}</div>
        </div>
        {{/with}}
        <hr>
        <br>
        <h3>Ports</h3>
        {{#each ports}}
        <div>
            <div>{{type}}</div>
            <div>{{count}}</div>
            {{#each features}}
            <ul>
                <li>{{this}}</li>
            </ul>
            {{/each}}
        </div>
        {{/each}}
        <div>
            <div>{{ports.type}}</div>
            <div>{{ports.count}}</div>
        </div>
        <br>
        <h3>Battery</h3>
        {{#with battery}}
        <div>
            <div>{{type}}</div>
            <div>{{capacity}}</div>
            <div>{{life}}</div>
        </div>
        {{/with}}
        <br>
        <h3>Weight</h3>
        <div>{{weight}}</div>
        <br>
        <h4>Dimentions</h4>
        {{#with dimensions}}
        <div>{{height}}</div>
        <div>{{width}}</div>
        <div>{{depth}}</div>
        {{/with}}
        <br>
        <div>{{operating_system}}</div>
        <br>
        <h3>Accessories</h3>
        {{#each accessories}}
        <ul>
            <li>
                <div>{{name}}</div>
                <div>{{price}}</div>
            </li>
        </ul>
        {{/each}}
    </div>
</div>
{{/with}}
</div>